<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="il.ac.shenkar.showshenkar.activities.ProjectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btnShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="5dp"
                android:onClick="shareProject"
                android:src="@drawable/ic_photo_camera_black_24dp" />

            <ImageView
                android:id="@+id/btnLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_toRightOf="@id/btnShare"
                android:onClick="showLocation"
                android:src="@drawable/ic_photo_camera_black_24dp" />

            <TextView
                android:id="@+id/txtLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_toRightOf="@id/btnLocation"
                android:text="מיקום"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textDirection="rtl" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txtProjectName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="שם הפרוייקט"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textDirection="rtl" />

        <TextView
            android:id="@+id/txtStudentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="שם הסטודנט"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textDirection="rtl" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/shenkarYellow"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp">

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_margin="5dp"
                android:background="@color/shenkarYellow">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <view
                        android:id="@+id/project_tumbs"
                        class="android.support.v7.widget.RecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="150dp" />

                </LinearLayout>
            </ScrollView>

            <ImageView
                android:id="@+id/imgScreenShot"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_alignTop="@+id/scrollView"
                android:layout_gravity="left|center"
                android:background="@color/shenkarYellow"
                android:src="@android:drawable/gallery_thumb" />

        </FrameLayout>


        <TextView
            android:id="@+id/txtProjectDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="תיאור הפרוייקט"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:textDirection="rtl" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="4.55">


        </RelativeLayout>
    </LinearLayout>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageButtonVideo"
        android:src="@drawable/videoico"
        android:layout_alignTop="@+id/imageButtonSound"
        android:layout_above="@+id/buttonVideo"
        android:layout_alignLeft="@+id/buttonVideo"
        android:layout_alignStart="@+id/buttonVideo"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="40dp"/>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageButtonSound"
        android:src="@drawable/audioic"
        android:layout_above="@+id/buttonSoundM"
        android:layout_alignRight="@+id/buttonSoundM"
        android:layout_alignEnd="@+id/buttonSoundM"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="40dp"/>
</FrameLayout>
