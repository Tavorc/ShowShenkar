        <activity android:name=".activities.YouTubeActivity" />
        <activity android:name=".activities.GeneralActivity" />
        <activity
            android:name=".activities.ProjectLocationMap"
            android:label="@string/project_location"
            android:supportsRtl="true"
            android:theme="@style/AppTheme" />
